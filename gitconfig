[alias]
	co = checkout
	diff = diff --patience
	cdiff = diff --color-words --patience
	cshow = show --color-words --patience
[color]
  diff = auto
  status = auto
  branch = auto
[core]
	editor = vim
[format]
	pretty = format:%h %Cblue%d %Cred%cn %Cgreen%cr %Creset %s
[merge]
	tool = meld
	conflictstyle = diff3
	summary = true
[push]
	default = simple
[diff "tex"]
	xfuncname = "^(\\\\(sub)*section\\{.*)$"
